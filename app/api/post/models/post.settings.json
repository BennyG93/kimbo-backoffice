{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "post"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "caption": {
      "type": "string"
    },
    "description": {
      "type": "text",
      "required": true
    },
    "street_name": {
      "type": "string",
      "required": true
    },
    "latitude": {
      "type": "decimal",
      "required": true
    },
    "longitude": {
      "type": "decimal",
      "required": true
    },
    "instagram": {
      "type": "string"
    },
    "twitter": {
      "type": "string"
    },
    "pinterest": {
      "type": "string"
    },
    "facebook": {
      "type": "string"
    },
    "linkedin": {
      "type": "string"
    },
    "webiste": {
      "type": "string"
    },
    "read_more": {
      "type": "string"
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "categories": {
      "via": "posts",
      "collection": "category",
      "dominant": true
    },
    "author": {
      "via": "posts",
      "model": "author"
    }
  }
}
